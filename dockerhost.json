{
  "builders": [{
      "vm_name": "dockerhost",
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "iso_url": "debian-7.4.0-amd64-netinst.iso",
      "iso_checksum": "e7e9433973f082a297793c3c5010b2c5",
      "iso_checksum_type": "md5",
      "boot_wait": "4s",
      "guest_additions_mode": "disable",
      "headless": false,
      "disk_size": "100000",
      "http_directory": "http",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -h now",
      "boot_command" : [
        "<esc> ",
        "install ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "debian-installer=de_DE ",
        "auto ",
        "locale=de_DE ",
        "kbd-chooser/method=de ",
        "netcfg/get_hostname=dockerhost.vm ",
        "netcfg/get_domain=reinblau.de ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "console-setup/ask_detect=false ",
        "console-keymaps-at/keymap=de ",
        "keyboard-configuration/xkb-keymap=de ",
        "<enter>"
     ]
  }],
  "post-processors": [
    "vagrant"
  ],
  "provisioners": [
    {
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant' | sudo -S sh '{{ .Path }}'"
        }
      },
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ]
}

